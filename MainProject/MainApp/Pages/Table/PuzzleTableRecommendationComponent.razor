@using MainApp.Service

<MudTable T="RecommendedData" Items="RecommendedDatas" Dense="true" OnRowMouseEnter="(e => RowMouseEnter(e))" OnRowMouseLeave="(e => RowMouseLeave(e))">
    <HeaderContent>
        <MudTh>좌표</MudTh>
        <MudTh>추천 퍼즐</MudTh>
        <MudTh>값</MudTh>
        <MudTh><MudIconButton OnClick="(() => Refresh())" Icon="@Icons.Material.Filled.Refresh"/></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.TargetRow @context.TargetColumn</MudTd>
        <MudTd>@context.RecommendedNumber</MudTd>
        <MudTd>@context.Value</MudTd> 
        <MudTd>
            <MudButton OnClick="(() => Select(context))" Size="Size.Small">선택</MudButton>
            <MudButton OnClick="(() => Exclude(context))" Size="Size.Small">제외</MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>