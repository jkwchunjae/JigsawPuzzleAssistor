@page "/corner"
@using MainApp.Service

<PageTitle>퍼즐::코너</PageTitle>

<MudText Typo="Typo.h4">코너 추출</MudText>
<MudText Typo="Typo.body1">이미지를 확인했습니다.</MudText>
<MudText Typo="Typo.body1">퍼즐 이미지에서 코너를 추출합니다.</MudText>

<MudButton Variant="Variant.Outlined" OnClick="@(() => StartCorner(3))">
    코너 추출
</MudButton>

<MudProgressLinear Size="Size.Large" Value="CornerProgress" />

@if (CornerErrors?.Any() ?? false)
{
<MudTable T="CornerErrorResult" Items="CornerErrors" Dense="true">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<CornerErrorResult, object>(x => x.FileName)">
                파일명
            </MudTableSortLabel>
        </MudTh>
        <MudTh>에러메세지</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.FileName</MudTd>
        <MudTd>@context.Error</MudTd>
    </RowTemplate>
</MudTable>
}

